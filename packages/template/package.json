{
  "name": "@kosko/template",
  "version": "4.0.2",
  "description": "Utilities for kosko templates.",
  "homepage": "https://kosko.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommy351/kosko.git",
    "directory": "packages/template"
  },
  "author": "Tommy Chen <tommy351@gmail.com>",
  "license": "MIT",
  "main": "dist/index.node.cjs",
  "module": "dist/index.node.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "build-scripts"
  },
  "exports": {
    "node": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.node.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.node.cjs"
      }
    },
    "types": "./dist/index.d.mts",
    "default": "./dist/index.base.mjs"
  },
  "files": [
    "/dist/"
  ],
  "keywords": [
    "kosko"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@kosko/log": "workspace:^",
    "exit": "^0.1.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@kosko/build-scripts": "workspace:^",
    "@kosko/jest-preset": "workspace:^",
    "@kosko/test-utils": "workspace:^",
    "@types/exit": "^0.1.31",
    "@types/yargs": "^17.0.12",
    "execa": "^5.1.1"
  },
  "jest": {
    "preset": "@kosko/jest-preset"
  }
}
