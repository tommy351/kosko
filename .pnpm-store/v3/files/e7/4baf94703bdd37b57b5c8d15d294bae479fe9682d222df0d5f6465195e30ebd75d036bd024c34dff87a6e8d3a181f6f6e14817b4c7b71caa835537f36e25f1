import { IIoK8sApiAutoscalingV2beta1MetricSpec } from "./IoK8sApiAutoscalingV2beta1MetricSpec";
import { IIoK8sApiAutoscalingV2beta1CrossVersionObjectReference } from "./IoK8sApiAutoscalingV2beta1CrossVersionObjectReference";
import { Model } from "@kubernetes-models/base";
/**
 * HorizontalPodAutoscalerSpec describes the desired functionality of the HorizontalPodAutoscaler.
 */
export interface IIoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec {
    /**
     * maxReplicas is the upper limit for the number of replicas to which the autoscaler can scale up. It cannot be less that minReplicas.
     */
    "maxReplicas": number;
    /**
     * metrics contains the specifications for which to use to calculate the desired replica count (the maximum replica count across all metrics will be used).  The desired replica count is calculated multiplying the ratio between the target value and the current value by the current number of pods.  Ergo, metrics used must decrease as the pod count is increased, and vice-versa.  See the individual metric source types for more information about how each type of metric must respond.
     */
    "metrics"?: Array<IIoK8sApiAutoscalingV2beta1MetricSpec>;
    /**
     * minReplicas is the lower limit for the number of replicas to which the autoscaler can scale down.  It defaults to 1 pod.  minReplicas is allowed to be 0 if the alpha feature gate HPAScaleToZero is enabled and at least one Object or External metric is configured.  Scaling is active as long as at least one metric value is available.
     */
    "minReplicas"?: number;
    /**
     * scaleTargetRef points to the target resource to scale, and is used to the pods for which metrics should be collected, as well as to actually change the replica count.
     */
    "scaleTargetRef": IIoK8sApiAutoscalingV2beta1CrossVersionObjectReference;
}
/**
 * HorizontalPodAutoscalerSpec describes the desired functionality of the HorizontalPodAutoscaler.
 */
export declare class IoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec extends Model<IIoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec> implements IIoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec {
    "maxReplicas": number;
    "metrics"?: Array<IIoK8sApiAutoscalingV2beta1MetricSpec>;
    "minReplicas"?: number;
    "scaleTargetRef": IIoK8sApiAutoscalingV2beta1CrossVersionObjectReference;
}
export { IIoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec as IHorizontalPodAutoscalerSpec, IoK8sApiAutoscalingV2beta1HorizontalPodAutoscalerSpec as HorizontalPodAutoscalerSpec };
